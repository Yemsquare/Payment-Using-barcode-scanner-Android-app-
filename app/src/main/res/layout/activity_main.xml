<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartshopping.sqlexamples.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/hirt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/topupp"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/common_google_signin_btn_text_light_pressed"
                android:src="@drawable/dashcard">
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:backgroundTint="@color/common_google_signin_btn_text_light_pressed"
                android:layout_height="75dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/purchas"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:backgroundTint="@color/common_google_signin_btn_text_light_pressed"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/homeicon" />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
